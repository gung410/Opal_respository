{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {RequestId} {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://cct-logging-mgmt.westeurope.cloudapp.azure.com:9200",
          "indexFormat": "systemtest-processor-{0:yyyy-MM}",
          "typeName": "LogEvent",
          "batchPostingLimit": 50,
          "minimumLogEventLevel": "Information",
          "autoRegisterTemplate": true
        }
      }
    ]
  }
}
