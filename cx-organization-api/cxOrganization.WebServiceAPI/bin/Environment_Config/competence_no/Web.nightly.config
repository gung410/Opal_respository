<?xml version="1.0"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <!-- !!!! ======================================================================================== !!!! -->
  <!-- !!!! Remember to change the build for this file: File must be marked Content + Copy to Output !!!! -->
  <!-- !!!! ======================================================================================== !!!! -->
  <appSettings>
    <add key="serviceUsername" value="nightlytuser" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="servicePassword" value="nightlypassword" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="OwnerId" value="15" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="SiteId" value="2" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="HDID" value="2" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="MasterRedisConfiguration" value="cct-sql02:6424,connectRetry=5,connectTimeout=10000,keepAlive=30,abortConnect=false,allowAdmin=true" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="SlaveRedisConfiguration" value="127.0.0.1:6424,connectRetry=5,connectTimeout=10000,keepAlive=30,abortConnect=false,allowAdmin=true" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="DisableGetDynamicProperties" value="True" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="DisableCheckAccessRule" value="True" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="UserTypeEmployee" value="49" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="CurrentUserId" value="34529" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
    <add key="UseSeparateQAndRDatabase" value="true" xdt:Transform="Replace"  xdt:Locator="Match(key)"/>
  </appSettings>

  <connectionStrings>
    <add name="ErrorLogging" connectionString="Data Source=cct-sql02;Initial Catalog=elmah-competence;Persist Security Info=True;User ID=ATAdmin; Password=morty" providerName="System.Data.SqlClient" xdt:Transform="Replace"  xdt:Locator="Match(name)"/>
    <add name="AT6QDBTemplate" connectionString="Data Source=cct-sql02;Initial Catalog=nightly-competence-no-at6q; User ID=atadmin;Password=morty" providerName="System.Data.SqlClient" xdt:Transform="Replace"  xdt:Locator="Match(name)"/>
  </connectionStrings>

  <elmah>
    <errorLog xdt:Transform="Remove" />
    <errorLog type=
    "Elmah.SqlErrorLog, Elmah" connectionStringName="ErrorLogging" applicationName="nightly-competence-no-api-organization" xdt:Transform="InsertIfMissing" />
  </elmah>

  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
  </system.web>

  <log4net xdt:Transform="Remove" />
  <log4net xdt:Transform="InsertIfMissing">
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="ElasticSearchAppender" />
    </root>
    <appender name="ElasticSearchAppender" type="log4stash.ElasticSearchAppender, log4stash">
      <Server>cct-logging-mgmt.westeurope.cloudapp.azure.com</Server>
      <Port>9200</Port>
      <IndexName>nightly-app-%{+yyyy-MM-dd}</IndexName>
      <IndexType>LogEvent</IndexType>
      <Bulksize>100</Bulksize>
      <BulkIdleTimeout>5000</BulkIdleTimeout>
      <IndexAsync>False</IndexAsync>
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="ERROR" />
      </evaluator>
      <!-- for more information read about log4net.Core.FixFlags -->
      <FixedFields>Partial</FixedFields>
      <ElasticFilters>
        <Add>
          <Key>sitename</Key>
          <Value>nightly-competence-no-api-organization</Value>
        </Add>
      </ElasticFilters>
    </appender>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\applogs\nightly-competence-no-api-organization-log.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="2MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{RequestId}] [%property{CorrelationId}] - %message%newline" />
      </layout>
    </appender>
  </log4net>
</configuration>