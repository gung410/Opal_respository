{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "@opal20/infrastructure": ["../libraries/infrastructure/lib"],
      "@opal20/infrastructure/*": ["../libraries/infrastructure/lib/*"],
      "@opal20/authentication": ["../libraries/authentication/lib"],
      "@opal20/authentication/*": ["../libraries/authentication/lib/*"],
      "@opal20/common-components": ["../libraries/common-components/lib"],
      "@opal20/common-components/*": ["../libraries/common-components/lib/*"],
      "@opal20/domain-api": ["../libraries/domain-api/lib"],
      "@opal20/domain-api/*": ["../libraries/domain-api/lib/*"],
      "@opal20/domain-components": ["../libraries/domain-components/lib"],
      "@opal20/domain-components/*": ["../libraries/domain-components/lib/*"]
    }
  },
  "files": ["./main.ts"],
  "include": ["*"]
}
