<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
	x:Class="LearnerApp.Controls.ListItemCard.VerticalNewsfeedList"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:newsfeed="clr-namespace:LearnerApp.Views.Home.Newsfeed">

	<ContentView.Content>
		<RefreshView
			Margin="10"
			Refreshing="RefreshView_Refreshing"
			VerticalOptions="FillAndExpand">
			<CollectionView
				x:Name="CollectionSource"
				RemainingItemsThreshold="0"
				RemainingItemsThresholdReached="SourceCollection_RemainingItemsThresholdReached"
				VerticalScrollBarVisibility="Never">
				<CollectionView.ItemTemplate>
					<newsfeed:NewsfeedDataTemplateSelectorImp />
				</CollectionView.ItemTemplate>
				<CollectionView.ItemsLayout>
					<LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
				</CollectionView.ItemsLayout>
				<CollectionView.EmptyView>
					<Label
						x:Name="EmptyViewMessage"
						HorizontalOptions="CenterAndExpand"
						IsVisible="False"
						Text="There's nothing here yet!" />
				</CollectionView.EmptyView>
			</CollectionView>
		</RefreshView>
	</ContentView.Content>
</ContentView>
